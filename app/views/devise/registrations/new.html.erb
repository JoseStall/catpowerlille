<section class="slice-lg has-bg-cover bg-size-cover" style="background-image: url(<%= asset_path 'cat/animal-cat-close-up-134060.jpg' %>); background-position:  right 85% bottom 85%;;">
  <div class="container">
    <div class="row justify-content-left cols-xs-space">
      <div class="col-lg-4">
        <div class="form-card form-card--style-2 z-depth-2-top">
          <div class="form-header text-center">
            <div class="form-header-icon">
              <i class="fa fa-user-plus"></i>
            </div>
          </div>
          <div class="form-body">

            <div class="text-center px-2">
              <h4 class="heading heading-4 strong-400 mb-4">S'inscrire</h4>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:'form-default mt-4') do |f| %>
              <%= devise_error_messages! %>
            <form class="form-default mt-4" data-toggle="validator" role="form">

              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group has-feedback">
                     <%= f.label :Nom_complet %><br />
                        <%= f.text_field :fullname, autocomplete: "off", placeholder: "PrÃ©nom + nom", class: 'form-control form-control-lg' %>


              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :email, class: "control-label" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Adresse e-email ",class:"form-control form-control-lg" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :password, class: "control-label" %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "off", class:"form-control form-control-lg" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-12">
                  <div class="form-group has-feedback">
                    <%= f.label :password_confirmation, class: "control-label" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control form-control-lg" %>
                  </div>
                </div>
              </div>

              <div class="mt-1 ">
                <small class="">En cliquant, vous acceptez les termes et conditions</small>
              </div>
              <%= f.submit "Inscription", class:"btn btn-styled  btn-base-1 mt-4" %>
            <% end %>
          </div>
          <small><%= link_to "Se connecter", new_session_path(resource_name) %></small>
        </div>
      </div>
    </div>
  </div>
</section>