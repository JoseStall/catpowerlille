<section class="slice-xl page-title border-bottom has-bg-cover bg-size-cover" style="background-image: url(<%= asset_path 'cat/pexels-photo-347290.jpg' %>);">
    <div class="container mask-container">
        <div class="row">
            <div class="col-md-6">
                <div class="">
                    <h3 class="heading heading-1 strong-600 text-capitalize mb-1">
                        <span>Mon panier</span>
                    </h3>

                    <ol class="breadcrumb breadcrumb--style-2">
                        <li class="breadcrumb-item"><a href="<%= root_path %>">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="<%= shop_path %>">Voir le magasin</a></li>
                        <li class="breadcrumb-item"><a href="javascript:history.back()">Retour</a></li>
                    </ol>
                </div>

                <!-- Fluid text paragraph -->
                <div class="pb-4 mt-4">
                    <p class="lead">
                        Parce qu'un chat peut égayer votre vie
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>





<% if @cart.items.empty? %> 
<section class="slice-xl sct-color-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="text-center">
                    <div class="d-block font-size-3 font-size-md-6 c-gray-light">
                        <i class="fa fa-shopping-cart"></i>
                    </div>

                    <h2 class="heading heading-3 strong-600">Votre panier est vide.</h2>
                    <p class="mt-4 px-5">
                        Votre panier est pour l'instant vide. Retournez vers notre magasin pour profiter des derniéres photos que nous avons selectionnés pour vous.
                    </p>
                    <a href="<%= shop_path %>" class="btn btn-styled btn-base-1 mt-5">
                        Retourner dans la galerie
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<% else %>
<section class="slice sct-color-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 mt--150">
                <form class="form-default" data-toggle="validator" role="form">
                    <div class="card">
                        <div class="card-body">
                            <table class="table-cart">

                                <thead>

                                    <tr>
                                        <th class="product-image">Aperçu</th>
                                        <th class="product-name">Description</th>
                                        <th class="product-price d-none d-lg-table-cell">Prix</th>
                                        <th class="product-quanity d-none d-md-table-cell">Quantité</th>
                                        <th class="product-total">Total</th>
                                        <th class="product-remove"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @cart.items.each do |item| %>
                                    <tr class="cart-item">
                                        <td class="product-image">
                                            <a href="<%= item_path(item.id) %>">
                                                <img src="<%= item.url %>">
                                            </a>
                                        </td>

                                        <td class="product-name">
                                            <%= item.title %>
                                        </td>

                                        <td class="product-price d-none d-lg-table-cell">
                                         <%= item.price %>
                                     </td>

                                     <td class="product-quantity d-none d-md-table-cell">
                                        <div class="input-group input-group--style-2 pr-4" style="width: 130px;">
                                            <input type="text" name="quantity[1]" class="form-control input-number" placeholder="3" value="1" min="1" max="10">
                                        </div>
                                    </td>
                                    <td class="product-total">
                                        <span><%= item.price %></span>
                                    </td>
                                    <td class="product-remove">
                                        <a href="<%= remove_path(item.id) %>" class="text-right pl-4">
                                            <i class="fa fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>


                        <div class="row align-items-center pt-5">
                            <div class="col-6">
                                <a href="<%= shop_path %>" class="link link--style-3">
                                    <i class="ion-android-arrow-back"></i>
                                    Retour au magasin
                                </a>
                            </div>
                            <div class="col-6 text-right">
                                <a href="<%= pay_path %>"> <button type="submit" class="btn btn-styled btn-base-1">Passer au paiement <%= @sum %></button> </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>



    <% end %>